@model IEnumerable<GameTrader.Models.VisitorStatistic>

@{
    ViewBag.Title = "View Visitor Statistics";
}
@*<main class="container">*@
<h5 class="center-align teal-text">Site Visitor Statistics</h5>
<div class="row">
    <div class="col s12 m12">
        <div class="card-panel teal">
            <span class="white-text">
                The Total number of site visitors : @Model.ToList().Count <br />
                The Total number of site visitors using Chrome : @Model.ToList().FindAll(x => x.Browser == "Chrome").Count<br />
                The Total number of site visitors using Internet Explorer : @Model.ToList().FindAll(x => x.Browser == "Internet Explorer").Count<br />
                The Total number of site visitors using Opera : @Model.ToList().FindAll(x => x.Browser == "Opera").Count<br />
                The Total number of site visitors using Safari : @Model.ToList().FindAll(x => x.Browser == "Safari").Count<br />
            </span>
        </div>
    </div>
</div>
<div class="row">
    <div class=" col m12" style="width:500px;">
        <table class="table responsive-table hoverable">
            <tr>
                <th>
                    Visitor Number
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IPAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AlternateIPAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaAccessed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Referer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Browser)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr style="word-wrap: break-word">
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IPAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlternateIPAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaAccessed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Timestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Referer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Browser)
                    </td>

                </tr>
            }

        </table>
    </div>
</div>
@*</main>*@