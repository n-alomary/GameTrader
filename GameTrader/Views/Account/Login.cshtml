@using GameTrader.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<main class="container">
    <div class="row">
        <div class="col s6 offset-s3 ">
            <div class="card-panel ">
                <span class="black-text">
                    <div class="row">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col s8 offset-s2 ", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h5 class="center-align">@ViewBag.Title</h5>
                            @Html.ValidationSummary(true, "", new { @class= "validate" })
                            <div class="row">
                                <div class="input-field s6">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m=> m.Email)
                                   @* @Html.ValidationMessageFor(m=> m.Email, "", new { @class= "validate"})*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field s6">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.TextBoxFor(m => m.Password, new { type = "password"  })
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field s6">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                            <div class="row">
                                <div class="center-align">
                                    <button name="Submit" value="Login" class="btn waves-effect waves-light" type="submit" name="action">
                                        Login
                                    </button>
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                        }
                    </div>
                </span>
            </div>
        </div>

    </div>
</main>

